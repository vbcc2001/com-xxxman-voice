<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_launcher" />  
          
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:shrinkColumns="0"
    	android:stretchColumns="0,1">
    	
	    <TableRow 
			android:layout_width="fill_parent"
	    	android:layout_height="wrap_content">
	    	
	    	    <TextView
			        android:id="@+id/title_list_item_title"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:ellipsize="marquee"
			        android:textStyle="bold"
			        android:gravity="left|center_vertical"	
			        android:text="@string/title_list_item_title" />

			    <TextView
			        android:id="@+id/title_list_item_type"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:gravity="right|center_vertical"	
			        android:text="@string/title_list_item_type" />
	    </TableRow>
	       
	    <TableRow 
			android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginTop="3dp">
			    
	    	    <TextView
			        android:id="@+id/title_list_item_checked"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:ellipsize="marquee"	
			        android:gravity="left|center_vertical"			        
			        android:text="@string/title_list_item_checked" />

			    <TextView
			        android:id="@+id/title_list_item_date"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:singleLine="true"
			        android:gravity="right|center_vertical"	      
			        android:text="@string/title_list_item_date" />			    
	    </TableRow>           
    </TableLayout>
</LinearLayout>